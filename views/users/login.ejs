<!DOCTYPE html>
<html lang="es">
  <%- include('../partials/head') %>
  <head>
    <link rel="stylesheet" href="/public/css/login.css">
  </head>
<body>
 <!-- Navbar -->
  <%- include('../partials/header') %>

  <!-- Iniciar Sesión Section -->
  <section class="login-section">
    <div class="form-container">
      <h1>BIENVENIDX!</h1>
      <h2>Por favor ingresa tus datos</h2>
      <form>
        <div class="form-group">
          <label for="email">E-mail</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="password">Contraseña</label>
          <input type="password" id="password" name="password" required>
        </div>
        <div class="extras">
          <div>
            <input type="checkbox" id="remember" name="remember">
            <label for="remember">Recordar usuario</label>
          </div>
          <a href="#">Olvidé la contraseña</a>
        </div>
        <button type="submit" class="submit-button">INGRESAR</button>
        <button type="button" class="google-button">INGRESAR CON GOOGLE</button>
        <p class="#">¿No tienes una cuenta? <a href="registro.ejs">¡Regístrate!</a></p>
      </form>
    </div>
    <div class="right-image">
      <img src="/public/images/Camanchaca.jpg" alt="Imagen de inicio de sesión">
    </div>
  </section>

  <!-- Footer -->
  <%- include('../partials/footer') %>

</body>
</html>
